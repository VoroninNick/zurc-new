<div id="slider">

  <style>
    <% slides.each_with_index do |slide, index| %>
        #slide-<%= index %>{
            background-image: url(<%= "#{ slide.image.home_slide.url }" %> ) !important;
        }
    <% end %>
  </style>

  <div style="position: absolute;width:100%;z-index: 100;">
    <%# render partial: 'partials/menu' %>
    <%= render "menu" %>
  </div>
  <ul id="refineslide-images" class="rs-slider">
    <!--<li style="background-image: url(/assets/banners/1.jpg)" class="slide-bg group">-->

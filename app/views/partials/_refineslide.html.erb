      <!--</div>-->
    <!--</li>-->

    <% slides.each_with_index do |slide, index| %>

      <li style="" id="slide-<%= index %>" class="slide-bg group">
        <a href="<%= url = slide.url; url.present? ? url : "" %>">
          <img src="<%= "#{ slide.image.home_slide.url }" %>" alt="<%= slide.image_alt %>" />
        </a>
        <% if slide.name.present? || slide.description.present? %>
            <div class="rs-caption">
              <% if slide.name.present? %>
                <span class="home-slider-slide-caption-title"><%= slide.name %></span>
              <% end %>
              <% if slide.description.present? %>
                <span class="home-slider-slide-caption-description"><%= slide.description %></span>
              <% end %>
            </div>
        <% end %>
      </li>
    <% end %>
    </ul>
</div>

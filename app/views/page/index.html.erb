<%= render partial: 'partials/refineslide', locals: { slides: @home_slides } if @home_slides.any? %>
<!-- Three-up Content Blocks -->

<% if @home_first_abouts.any? %>
    <div id="home-about" >
      <div id="home-about-row" class="row">
        <% @home_first_abouts.each do |item| %>
          <div class="large-3 medium-6 small-3 columns">

            <% url = item.link ? item.url : nil %>

            <%= content_tag(url.present? ? :a : :span, { href: (url.present? ? url : nil), class: 'decorative-letter'}) do %>
                <span class="decorative-letter-inner"><%=  (name = item.content) ? name[0] : nil %></span>
            <% end %>

            <%= content_tag url.present? ? :a : :span,  { href: (url.present? ? url : nil), class: :name } do
                 ( link_content = item.link ? item.content : nil ) ? link_content[0, link_content.length] : nil
             end %>
            <p class="show-for-medium-up"><%= item.description %></p>
          </div>
        <% end %>
      </div>
    </div>
<% end %>

<% if @featured_articles.any? %>
    <div id="home-publications" class="row">

      <% @featured_articles.each do |article| %>
          <%= render "article", article: article, htag: "h4" %>
      <% end %>
    </div>
<% end %>


<%= render partial: 'partials/owl_carousel', locals: { gallery_items: @home_gallery_images } if @home_gallery_images.any? %>

<% if @home_second_abouts.any? %>
    <div class="row" id="home-about2">
      <% @home_second_abouts.each do |item| %>
          <div class="large-3 medium-6 small-12 columns">

            <%= content_tag ( url = item.link ? item.url : nil ).present? ? :a : :span, { href: (url.present? ? url : nil), class: "home-about2-column-title" } do  %>
              <%= item.link ? item.content : nil %>
            <% end %>
            <p class="home-about2-column-description">
              <%= item.description %>
            </p>
          </div>
      <% end %>
    </div>
<% end %>
<div id="breadcrumbs-wrapper">
	<div class="row">
    <div class="columns large-12">
		<ul class="breadcrumbs">
          <%# @breadcrumbs.inspect %>
          <% if @breadcrumbs %>
			<% @breadcrumbs.each_with_index do |b, index| %>
  				<li><% if b[:url] %>
  						<%= link_to(b[:title], b[:url]) %>
  					<% else %>
  						<%= content_tag(:span, b[:title], class: "#{"current" if b[:current] == true  }") %>
  					<% end %>
  				</li>
  			<% end %>
          <% end %>
		</ul>
    </div>
	</div>
</div>